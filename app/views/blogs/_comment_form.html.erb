<%= form_with(model: [ @blog, @blog.comments.build ], local: true) do |form| %>
  <% if @blog.comments.build.errors.any? %>
    <div class="alert alert-danger">
    <h4><%= pluralize(@blog.comments.build.errors.count, "error") %> prohibited this comment from being saved:</h4>
    <ul>
      <% @blog.comments.build.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", placeholder: "Enter your comment here" %>
