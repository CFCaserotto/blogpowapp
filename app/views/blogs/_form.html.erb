<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10"> 
      <%= form_with model: obj do |form| %>
        <div class="form-group"> 
          <%= form.hidden_field :user_id, value: current_user.id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :title %><br>
          <%= form.text_field :title, class: "form-control" %>
          <% if obj.errors.any? %>
          <div class="alert alert-danger">
            <% obj.errors.full_messages_for(:title).each do |message| %>
              <li>
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </li>
            <% end %>
          </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :body %><br>
          <%= form.text_area :body, class: "form-control", style: "height: 150px; font-size: 1.2rem;" %><br>
          <% if obj.errors.any? %>
          <div class="alert alert-danger">
          <% obj.errors.full_messages_for(:body).each do |message| %>
            <li><%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </li>
            <% end %>
          </div>
          <% end %>
        </div>

        <div class="form-group text-center">
          <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

